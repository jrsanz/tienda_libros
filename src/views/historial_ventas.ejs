<%- include ('./partials/header_inicio') %>
<title>Historial de ventas</title>
<%- include ('./partials/header_fin') %>

<!-- Inicio navbar -->
<%- include ('./partials/navbar') %>
<!-- Fin navbar -->

<div class="container pt-3 pb-3">
    <!-- Inicio de la tabla -->
    <div class="table-responsive pt-5">
        <!-- Inicio filtrar información -->
        <div class="row">
            <div class="d-flex justify-content-bewteen">
                <form action="/historial/filterSearch" method="post">
                    <label class="form-label pt-2 fs-5" for="filtrar_search">Buscar: </label>
                    <input class="form-control mx-2 px-2 w-20" type="search" name="filtrar_search" placeholder="Nombre o ID del cliente" style="width: 300px; display: inline" required>
                    <button type="submit" class="btn btn-secondary" style="display: inline"><i class="bi bi-search"></i></button>
                </form>
                <div class="col"></div>
                <label class="form-label px-2 pt-2 fs-5" for="filtrar_desc">Filtrar por libros más vendidos: </label>
                <a href="/historial/filterDesc"><button type="submit" class="btn btn-secondary mx-2"><i class="bi bi-sort-down-alt"></i></button></a>
            </div>
        </div>
        <!-- Fin filtrar información -->

        <br>

        <table class="table table-striped table-hover table-bordered align-middle caption-top">
            <caption>Historial de ventas</caption>

            <thead class="text-center">
            <tr>
                <th>#</th>
                <th>Cliente</th>
                <th>Nombre</th>
                <th>Autor</th>
                <th>ISBN</th>
                <th>Editorial</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Total pagado</th>
                <th>Tipo de envío</th>
                <th>Tipo de pago</th>
                <th>Estatus</th>
            </tr>
            </thead>
            <tbody>
            <% if (data) { %>
                <% for (var i = 0; i < data.length; i++) { %>
                    <tr>
                        <td class="text-center"><%= i + 1 %></td>
                        <td><%= data[i].nombre_usuario + ' ' + data[i].apellido_paterno + ' ' + data[i].apellido_materno %></td>
                        <td><%= data[i].nombre %></td>
                        <td><%= data[i].autor %></td>
                        <td><%= data[i].isbn %></td>
                        <td><%= data[i].editorial %></td>
                        <td class="text-center">$<%= data[i].precio %></td>
                        <td class="text-center"><%= data[i].cantidad %></td>
                        <td class="text-center">$<%= data[i].total_a_pagar %></td>
                        <td class="text-center"><%= data[i].tipo_envio %></td>
                        <td class="text-center"><%= data[i].tipo_pago %></td>
                        <td class="text-center"><%= data[i].estatus %>
                            <a href="/historial/seguimiento/<%= data[i].id %>"><br><button class="btn btn-primary mt-2">Detalles</button></a>
                        </td>
                    </tr>
                <% } %>
            <% } %>
            </tbody>
        </table>
    </div>
    <!-- Fin de la tabla -->
</div>

<br>

<!-- Inicio footer -->
<%- include ('./partials/footer') %>
<!-- Fin footer -->
</body>
</html>