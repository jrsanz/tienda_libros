<%- include ('../partials/header_inicio') %>
<title>Mis Compras</title>
<%- include ('../partials/header_fin') %>

<!-- Inicio navbar -->
<%- include ('../partials/navbar_ulog') %>
<!-- Fin navbar -->

    <div class="container">
        <div class="row">
            <div class="col-1 col-md-3"></div>
            <div class="col-10 col-md-6">
                <h3 class="text-center pt-5">Seguimiento de tu pedido</h3>
                <% if (data[0].estatus == 'Pago confirmado') { %>
                    <div class="d-flex justify-content-center">
                        <img class="img-fluid" src="/img/1%20Fase%20Terminada.png">
                    </div>
                <% } else if (data[0].estatus == 'Preparando tu pedido') { %>
                    <div class="d-flex justify-content-center">
                        <img class="img-fluid" src="/img/2%20Fases%20Terminadas.png">
                    </div>
                <% } else if (data[0].estatus == 'En camino') { %>
                    <div class="d-flex justify-content-center">
                        <img class="img-fluid" src="/img/3%20Fases%20Terminadas.png">
                    </div>
                <% } else if (data[0].estatus == 'Pedido entregado') { %>
                    <div class="d-flex justify-content-center">
                        <img class="img-fluid" src="/img/4%20Fases%20Terminadas.png">
                    </div>
                <% } %>
                <h5>Detalles</h5>
                <div class="row pt-3 pb-5">
                    <div class="col-6">
                        <img class="img-fluid" src="<%= data[0].imagen %>" alt="<%= data[0].nombre %>">
                    </div>
                    <div class="col-4">
                        <p class="fw-bold" style="display: inline">Nombre: </p>   <p style="display: inline"><%= data[0].nombre %></p>        <br><br>
                        <p class="fw-bold" style="display: inline">Autor: </p>   <p style="display: inline"><%= data[0].autor %></p>        <br><br>
                        <p class="fw-bold" style="display: inline">ISNB: </p>   <p style="display: inline"><%= data[0].isnb %></p>        <br><br>
                        <p class="fw-bold" style="display: inline">Editorial: </p>   <p style="display: inline"><%= data[0].editorial %></p>        <br><br>
                        <p class="fw-bold" style="display: inline">Precio: </p>   <p style="display: inline">$<%= data[0].precio %></p>        <br><br>
                        <p class="fw-bold" style="display: inline">Cantidad: </p>   <p style="display: inline"><%= data[0].cantidad %></p>        <br><br>
                        <p class="fw-bold" style="display: inline">Tipo de env√≠o: </p>   <p style="display: inline"><%= data[0].tipo_envio %></p>        <br><br>
                        <p class="fw-bold" style="display: inline">Estatus: </p>   <p style="display: inline"><%= data[0].estatus %></p>        <br><br>
                    </div>
                </div>
            </div>
            <div class="col-1 col-md-3"></div>
        </div>
    </div>

    <br>

    <!-- Inicio footer -->
    <%- include ('../partials/footer_ulog') %>
    <!-- Fin footer -->
</body>
</html>